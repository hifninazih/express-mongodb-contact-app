<div class="container mt-5">
    <div class="row">
      <div class="col-md-6">
        <h1>Edit Contact</h1>
        <!-- menampilkan error -->
        <% if (typeof errors !== 'undefined') { %>
        <div class="alert alert-danger" role="alert">
          <ul>
            <% errors.forEach((error) => { %>
            <li><%= error.msg %></li>
            <% }) %>
          </ul>
        </div>
        <% } %>
      
          <form action="/contact?_method=PUT" method="POST">
            <input type="hidden" name="oid" value="<%= contact._id %>">
            <div class="mb-3">
              <label for="nama" class="form-label">Nama</label>
              <input
                type="text"
                class="form-control"
                id="nama"
                name="name"
                value="<%= contact.name %>"
                required
              />
            </div>
            <div class="mb-3">
              <label for="noHP" class="form-label">No HP</label>
              <input
                type="number"
                class="form-control"
                id="noHP"
                name="noHP"
                value="<%= contact.noHP %>"
                required
              />
            </div>
  
            <div class="mb-3">
              <label for="email" class="form-label">E-mail</label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                value="<%= contact.email %>"
                required
              />
            </div>
  
            <button type="submit" class="btn btn-primary">Ubah Contact</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  